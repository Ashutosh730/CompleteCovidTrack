<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/stateTestDate"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.40"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:background="@drawable/basic_background"
        app:layout_constraintEnd_toStartOf="@+id/totalStateTests"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalStateTests"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="wrap_content"
        android:text="Test Done"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:background="@drawable/basic_background"
        app:layout_constraintEnd_toStartOf="@+id/positiveStateTest"
        app:layout_constraintStart_toEndOf="@+id/stateTestDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/positiveStateTest"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="wrap_content"
        android:text="+ve Cases"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:background="@drawable/basic_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/totalStateTests"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>